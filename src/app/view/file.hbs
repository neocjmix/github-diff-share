{{#each this}}
    <article class="file">
        <header>
            <h1>{{from}}{{#if filePathChanged}}&rarr; {{to}}{{/if}}</h1>
        </header>
        <main>
            <ul class="chunks">
                {{#each this.chunks}}
                    <li class="chunk">
                        <div class="ui">
                            <input type="radio" name="mode{{@../index}}{{@index}}" aria-label="&larr;" value="before">
                            <input type="radio" name="mode{{@../index}}{{@index}}" aria-label="&rarr;" value="after">
                            <input type="radio" name="mode{{@../index}}{{@index}}" aria-label="&harr;" value="both" checked>
                        </div>
                        <code>
                            {{#each this.changes}}
                                <div class="row {{type}}">
                                    <div class="cell number" data-line-number="{{ln}}" data-line-number1="{{ln1}}" data-line-number2="{{ln2}}"></div>
                                    <div class="cell line">{{{content}}}</div>
                                </div>
                            {{/each}}
                        </code>
                    </li>
                {{/each}}
            </ul>
        </main>
    </article>
{{/each}}